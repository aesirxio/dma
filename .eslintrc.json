{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2022,
        "sourceType":"module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "no-unused-vars": "error"
    },
    "settings": {
        "react": {
            "version": "17.0.2"
        }
    },
    "parser": "@babel/eslint-parser",
    "ignorePatterns": [
        "*.json",
        "*.scss",
        "*.svg"
    ]
}